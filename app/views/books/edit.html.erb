<div class="editor">

  <h1 class="editor-logo">Editing Book</h1>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book do |f| %>

    <div class="editor-form">
      <h4 class="editor-title-form">Title</h4>
      <%= f.text_field :title %>

      <h4 class="editor-body-form">Body</h4>
      <%= f.text_area :body %>
    </div>
    <div class="Update-button">
    <%= f.submit 'Update Book' %>
    </div>
</div>

<nav>
  <ul class="nav-list">
    <li class="nav-list-item"><%= link_to "Show", book_path(@book.id) %></li>
    <li class="nav-list-item"><%= link_to "Back", '/books' %></li>
  </ul>
</nav>

  <% end %>